<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <application
        android:label="@string/app_name">
        <service
            android:name="com.android.jerroldelayre.portfolio.smsobserver.SMSService" />

        <activity android:name="com.android.jerroldelayre.portfolio.smsobserver.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Transparent"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.android.jerroldelayre.portfolio.smsobserver.SMSReceiver"
            android:permission="android.permission.BROADCAST_SMS"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>